include css.pug
doctype html
style(media='print').
  @page {
    margin-left: 1.5cm;
    margin-right: 1.5cm;
  }
html
  head
    meta(charset="utf-8")
    title report
  body
    button.btn.btn-sm.btn-success(onclick='window.print()') Print
    table.table2
      thead
        tr
          td.center.head.bold(colspan=8) #{hospname}
        tr
          td.center.head(colspan=8) รายงานเจ้าหนี้การค้า
        tr
          td.left.head(colspan=4)
          td.right.head(colspan=4) #{printDate}
    table.table2
      thead
        tr
          th(style='width:5%').center ที่
          th(style='width:15%').center เลขที่ใบสั่งซื้อ
          th(style='width:10%').center เลขที่ใบส่งของ
          th(style='width:30%').center เจ้าหนี้
          th(style='width:10%').right มูลค่า
          th(style='width:10%').center หมวดสินค้า
          th(style='width:10%').center ส่งเขียนเช็ค
          th(style='width:10%').center รับเช็ค
      tbody
      - no = 0
        - for(let i of details)
          tr
            td.center #{++no}
            td #{i.purchase_order_book_number ? i.purchase_order_book_number:i.purchase_order_number}
            td #{i.delivery_code}
            td #{i.labeler_name}
            td.right #{i.cost}
            td #{i.generic_type_name}
            td 
            td
      tfoot
        tr
          td.bold.right(colspan="4")  รวม
          td.right #{sumCost}
        tr
          td(colspan="8") <br>
        tr
          td(colspan="4").center ....................................................................ผู้ส่ง
          td
          td(colspan="4").center ....................................................................ผู้รับ 
           
        